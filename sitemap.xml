---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml"
        xmlns:mobile="http://www.mobile.googlebot.com/schemas/mobile/1.0"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">

  <!-- Homepage -->
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Blog Posts - All published posts from _posts folder -->
  {% for post in site.posts %}
    {% unless post.published == false %}
    <url>
      <loc>{{ post.url | absolute_url }}</loc>
      <lastmod>
        {% if post.last_modified_at %}
          {{ post.last_modified_at | date_to_xmlschema }}
        {% elsif post.updated %}
          {{ post.updated | date_to_xmlschema }}
        {% else %}
          {{ post.date | date_to_xmlschema }}
        {% endif %}
      </lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
    </url>
    {% endunless %}
  {% endfor %}

  <!-- Pages from _pages folder -->
  {% for page in site.pages %}
    {% unless page.sitemap == false %}
    {% if page.permalink %}
    <url>
      <loc>{{ page.url | absolute_url }}</loc>
      <lastmod>
        {% if page.last_modified_at %}
          {{ page.last_modified_at | date_to_xmlschema }}
        {% else %}
          {{ site.time | date_to_xmlschema }}
        {% endif %}
      </lastmod>
      <changefreq>{% if page.sitemap.changefreq %}{{ page.sitemap.changefreq }}{% else %}monthly{% endif %}</changefreq>
      <priority>{% if page.sitemap.priority %}{{ page.sitemap.priority }}{% else %}0.7{% endif %}</priority>
    </url>
    {% endif %}
    {% endunless %}
  {% endfor %}

  <!-- Tag Pages -->
  {% for tag in site.tags %}
    <url>
      <loc>{{ site.url }}/tags/#{{ tag[0] | slugify }}</loc>
      <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.6</priority>
    </url>
  {% endfor %}

</urlset>
