{
  "ci": {
    "collect": {
      "url": ["https://www.powerplatformtip.com"],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox"
      }
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.85}],
        "categories:accessibility": ["error", {"minScore": 0.90}],
        "categories:best-practices": ["error", {"minScore": 0.85}],
        "categories:seo": ["error", {"minScore": 0.90}],
        
        "first-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 3500}],
        "interactive": ["error", {"maxNumericValue": 5000}],
        "speed-index": ["error", {"maxNumericValue": 4000}],
        "total-blocking-time": ["error", {"maxNumericValue": 400}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.15}],
        
        "uses-long-cache-ttl": "off",
        "unused-javascript": "off",
        "unused-css-rules": "off",
        "legacy-javascript": "off",
        "dom-size": ["warn", {"maxNumericValue": 2000}],
        "bootup-time": ["warn", {"maxNumericValue": 4000}],
        "mainthread-work-breakdown": ["warn", {"maxNumericValue": 5000}],
        "uses-responsive-images": "off",
        "offscreen-images": "off",
        "render-blocking-resources": "off",
        "unminified-css": "off",
        "unminified-javascript": "off",
        "modern-image-formats": "off",
        "uses-optimized-images": "off",
        "uses-text-compression": "off",
        "uses-rel-preconnect": "off",
        "font-display": "off",
        "third-party-summary": "off",
        "third-party-facades": "off",
        "duplicated-javascript": "off",
        "unsized-images": "off",
        "valid-source-maps": "off",
        "preload-lcp-image": "off",
        "csp-xss": "off",
        "server-response-time": ["warn", {"maxNumericValue": 1000}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
