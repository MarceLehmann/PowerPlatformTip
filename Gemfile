source "https://rubygems.org"

# GitHub Pages gem includes jekyll-seo-tag, jekyll-sitemap, jekyll-feed, jekyll-redirect-from
gem "github-pages", group: :jekyll_plugins
gem "ffi", "< 1.17.0"

# Explicitly declare additional plugins for clarity (included in github-pages)
group :jekyll_plugins do
  gem "jekyll-sitemap"
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-redirect-from"
end
